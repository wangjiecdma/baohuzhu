<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/xx_project_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="XX项目"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/project_attr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="首标"
            android:textColor="@android:color/holo_red_light"
            android:textSize="16dp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <TextView
            android:id="@+id/project_amount_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/xx_project_name"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="互助总额 :" />

        <TextView
            android:id="@+id/project_amount_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/xx_project_name"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/project_amount_text"
            android:gravity="center"
            android:text="10000" />
        <TextView
            android:id="@+id/project_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="205dp"
            android:layout_below="@id/xx_project_name"
            android:gravity="center"
            android:text="互助期限 :"
            />

        <TextView
            android:id="@+id/project_date_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/xx_project_name"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/project_date_text"
            android:gravity="center"
            android:text="1个月" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <TextView
            android:id="@+id/project_rate_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="互助利率 :" />

        <TextView
            android:id="@+id/project_ratenum_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/project_rate_text"
            android:gravity="center"
            android:text="1%" />
        <TextView
            android:id="@+id/project_PopTotal_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="205dp"
            android:gravity="center"
            android:text="需要人数 :"
            />

        <TextView
            android:id="@+id/project_PopTotalnum_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/project_PopTotal_text"
            android:gravity="center"
            android:text="10人" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <TextView
            android:id="@+id/project_join_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="目前参与 :"
            />

        <TextView
            android:id="@+id/preject_joinnum_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/project_join_text"
            android:gravity="center"
            android:text="8人" />
        <TextView
            android:id="@+id/project_bidding_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="205dp"
            android:gravity="center"
            android:text="竞标人数 :"
            />

        <TextView
            android:id="@+id/project_biddingnum_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/project_bidding_text"
            android:gravity="center"
            android:text="2人" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <TextView
            android:id="@+id/project_datetime_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="项目时间 :"
            />

        <TextView
            android:id="@+id/project_datetime_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/project_datetime_text"
            android:gravity="center"
            android:text="2018.10.1-2018.10.31" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/project_closetime_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="截止日期：" />

        <TextView
            android:id="@+id/project_close_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/project_closetime_text"
            android:text="2018.09.30" />
        <TextView
            android:id="@+id/project_status_text_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="205dp"
            android:gravity="center"
            android:text="项目状态 :"
            />

        <TextView
            android:id="@+id/project_status_text_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/project_status_text_item"
            android:gravity="center"
            android:text="竞标中" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="11.3dp"
        android:paddingRight="11.3dp"
        android:paddingTop="10dp"
        >

        <TextView
            android:id="@+id/project_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="本项目离竞标结束日期还有：" />
    </LinearLayout>

    <TextView
        android:id="@+id/list_text_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:paddingTop="10dp"
        android:text="目前参与者：" />

    <ListView
        android:id="@+id/partin_or_continue_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>