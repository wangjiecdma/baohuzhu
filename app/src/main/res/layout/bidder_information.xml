<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FB"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:text="手机号码："
            android:gravity="center_vertical"
            />
        <TextView
            android:id="@+id/bider_info_phonenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13731336159"
            android:gravity="center_vertical"
            android:textSize="18sp"


            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="获取验证码"
                android:contextClickable="true"
                android:clickable="true"
                android:layout_margin="8dp"
                android:textSize="14sp"
                android:textColor="#0889E7"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:hint="请输入验证码"
            android:maxLength="6"
            android:inputType="text"
            android:padding="8dp"
            android:layout_margin="5dp"
            android:textSize="14sp"

            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入提现银行卡号"
            android:maxLength="19"
            android:singleLine="true"
            android:inputType="number"
            android:padding="8dp"
            android:layout_margin="5dp"
            android:textSize="14sp"

            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入提现银行卡姓名"
            android:maxLength="12"
            android:singleLine="true"
            android:inputType="text"
            android:padding="8dp"
            android:layout_margin="5dp"
            android:textSize="14sp"

            />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入提现银行卡开户支行名称"
            android:inputType="text"
            android:padding="8dp"
            android:layout_margin="5dp"
            android:textSize="14sp"

            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入身份证号（必须跟银行卡号同名）"
            android:inputType="text"
            android:maxLength="18"
            android:padding="8dp"
            android:layout_margin="5dp"
            android:textSize="14sp"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="信息务必准确，核对有误将无法获取竞标的"
            android:textColor="#66dac7"
            android:textSize="12sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:layout_gravity="center"
        >

        <Button
            android:layout_width="135dp"
            android:layout_height="30dp"
            android:textColor="#ffffff"
            android:text="下一步"
            />
    </LinearLayout>


</LinearLayout>