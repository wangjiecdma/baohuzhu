<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FB"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:text="手机号码："
            android:gravity="center_vertical"
            />
        <TextView
            android:id="@+id/bider_info_phonenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13731336159"
            android:gravity="center_vertical"
            android:textSize="18sp"


            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="获取验证码"
                android:contextClickable="true"
                android:clickable="true"
                android:layout_margin="8dp"
                android:textSize="14sp"
                android:textColor="#0889E7"
                />
        </LinearLayout>

    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="10dp"
        android:hint="请输入验证码"
        android:maxLength="6"
        android:inputType="text"
        android:padding="8dp"
        android:textSize="14sp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >
        <TextView
            android:id="@+id/arrearege_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="可提现余额 :"
            />

        <TextView
            android:id="@+id/arrearagenum_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/arrearege_text"
            android:gravity="center"
            android:text="5000"
            />
        <TextView
            android:id="@+id/balance_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="205dp"
            android:layout_below="@id/xx_project_name"
            android:gravity="center"
            android:text="在途（ 元 ）:"
            />

        <TextView
            android:id="@+id/balancenum_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/balance_text"
            android:gravity="center"
            android:text="100"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        >
        <TextView
            android:id="@+id/withdraw_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="提现金额"
            />
        <TextView
            android:id="@+id/moneysign_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/withdraw_text"
            android:layout_marginTop="10dp"
            android:textSize="25sp"
            android:text="￥"
            />
        <TextView
            android:id="@+id/withdraw_cash_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/withdraw_text"
            android:layout_toRightOf="@id/moneysign_text"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="25sp"
            android:text="100"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现到"
            />
        <Spinner
            android:id="@+id/deposit_withdraw_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            >
        </Spinner>

    </RelativeLayout>
    <Button
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="下一步"
        android:textColor="#ffffff"
        />

</LinearLayout>