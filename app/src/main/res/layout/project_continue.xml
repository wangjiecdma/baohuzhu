<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/project_continue_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="XX项目"
        android:textSize="18dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >
        <TextView
            android:id="@+id/project_continue_amount_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="互助总额："

            />
        <TextView
            android:id="@+id/project_continue_amountnum_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/project_continue_amount_text"
            android:gravity="center"
            android:text="10000"

            />

        <TextView
            android:id="@+id/project_continue_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="205dp"
            android:gravity="center"
            android:text="续标利率："
            />

        <TextView
            android:id="@+id/project_continue_datenum_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/project_continue_date_text"
            android:gravity="center"
            android:text="0%" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="项目时间："
            />

        <TextView
            android:id="@+id/project_continue_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="2018-10-02~2018-11-01" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="截至日期："
            />

        <TextView
            android:id="@+id/project_continue_closetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="2018-10-29" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/project_continue_dura_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/box"
        android:clickable="true"
        android:padding="8dp"
        android:paddingLeft="11.3dp"
        android:paddingRight="11.3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="项目开始 " />

        <TextView
            android:id="@+id/project_continue_dura_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="right"
            android:hint="请选择续标期限"
            android:lines="1"
            android:textSize="12dp">

        </TextView>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交续标后不可撤销"
            android:textSize="12sp" />
    </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:padding="10dp"
       android:gravity="center"
       >

       <CheckBox
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:checked="true" />
       
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="续标标协议"
           />
   </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button
            android:id="@+id/project_continue_confirm_btn"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="45dp"
            android:text="确认"
            android:textColor="#ffffff"
            android:background="@drawable/determine_button"
            />
        <Button
            android:id="@+id/project_continue_cancle_btn"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="45dp"
            android:text="取消"
            android:background="@drawable/cancel_button"
            />

    </RelativeLayout>


</LinearLayout>