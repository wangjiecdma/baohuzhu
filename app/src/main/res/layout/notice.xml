<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >
        <ImageView
            android:id="@+id/help_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/mutual_aid1"
            />
        <TextView
            android:id="@+id/notice_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/help_image"
            android:text="互助通知"
            />
        <TextView
            android:id="@+id/content_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/help_image"
            android:layout_below="@id/notice_text"
            android:layout_marginLeft="20dp"
            android:text="显示通知内容"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >
        <ImageView
            android:id="@+id/mall_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/store1"
            />
        <TextView
            android:id="@+id/mall_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/mall_image"
            android:text="商城通知"
            />
        <TextView
            android:id="@+id/mallcontent_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/mall_image"
            android:layout_below="@id/mall_text"
            android:layout_marginLeft="20dp"
            android:text="显示通知内容"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >
        <ImageView
            android:id="@+id/order_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/store1"
            />
        <TextView
            android:id="@+id/order_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/order_image"
            android:text="订单消息"
            />
        <TextView
            android:id="@+id/ordercontent_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/order_image"
            android:layout_below="@id/order_text"
            android:layout_marginLeft="20dp"
            android:text="订单显示"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >
        <ImageView
            android:id="@+id/notice_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/store1"
            />
        <TextView
            android:id="@+id/sysnotice_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/notice_image"
            android:text="系统通知"
            />
        <TextView
            android:id="@+id/noticecontent_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/notice_image"
            android:layout_below="@id/sysnotice_text"
            android:layout_marginLeft="20dp"
            android:text="信息内容"
            />

    </RelativeLayout>
</LinearLayout>